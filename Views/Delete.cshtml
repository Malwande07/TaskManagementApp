@model TaskManagementApp.Models.TaskItem

<h2>Are you sure you want to delete this task?</h2>

<div class="alert alert-warning">
    <strong>Warning!</strong> Deleting this task cannot be undone.
</div>

<table class="table">
    <tr>
        <th>Title</th>
        <td>@Model.Title</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Due Date</th>
        <td>@Model.DueDate.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Status</th>
        <td>@(Model.IsCompleted ? "Completed" : "Pending")</td>
    </tr>
</table>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete Task</button>
</form>

<a href="@Url.Action("Index", "Task")" class="btn btn-secondary mt-3">Back to Task List</a>
