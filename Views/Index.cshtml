@model IEnumerable<TaskManagementApp.Models.TaskItem>

<h1>Task List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Completed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>@(task.IsCompleted ? "Yes" : "No")</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = task.Id })">Edit</a> |
                    <a href="@Url.Action("Details", new { id = task.Id })">Details</a> |
                    <a href="@Url.Action("Delete", new { id = task.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")">Create New Task</a>
